{
  "name": "booner-trade",
  "version": "1.0.0",
  "description": "AI-Powered Trading Platform f√ºr MT5",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.boonertrade.app",
    "productName": "Booner Trade",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "app/backend",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/venv",
          "!**/node_modules"
        ]
      },
      {
        "from": "../frontend/build",
        "to": "app/frontend/build"
      },
      {
        "from": "./mongodb-mac",
        "to": "app/mongodb",
        "filter": ["**/*"]
      },
      {
        "from": "./python-env",
        "to": "app/python",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "icon": "assets/logo.png",
      "target": [
        {
          "target": "dir",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "extraResources": [
      {
        "from": "./backend",
        "to": "app/backend",
        "filter": ["**/*", "!__pycache__", "!*.pyc"]
      },
      {
        "from": "./frontend/build",
        "to": "app/frontend/build"
      },
      {
        "from": "./mongodb-mac",
        "to": "app/mongodb"
      },
      {
        "from": "./python-launcher",
        "to": "app/python"
      },
      {
        "from": "./python-packages",
        "to": "app/python-packages"
      }
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Booner Trade Installer",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "sign": false
    }
  }
}
